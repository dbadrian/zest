#!/usr/bin/env bash
set -e

REPO=https://github.com/dbadrian/zest.git
APP_DIR=/home/zest/zest

# get the latest version of zest to get the tags
cd $APP_DIR/upstream
git pull
git fetch --tags

# since the actual deploy script has maybe changed 
# call the second part now that does the actual deployment with the latest updates
bash server/deploy_zest_impl